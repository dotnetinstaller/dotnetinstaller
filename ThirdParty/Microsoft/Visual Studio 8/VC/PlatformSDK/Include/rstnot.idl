	HRESULT OnFieldChange(
		[in] IRowset * pRowset,
		[in] HROW hRow,
		[in] DBORDINAL cColumns,
		[in, size_is((ULONG)cColumns)] DBORDINAL rgColumns[],
		[in] DBREASON eReason,
		[in] DBEVENTPHASE ePhase,
		[in] BOOL fCantDeny
	);

#ifndef NO_REMOTE

