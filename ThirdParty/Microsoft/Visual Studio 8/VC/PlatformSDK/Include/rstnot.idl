		[in] DBEVENTPHASE ePhase,
		[in] BOOL fCantDeny
	);

#endif

	[local]
	HRESULT OnRowsetChange(
		[in] IRowset * pRowset,
		[in] DBREASON eReason,
		[in] DBEVENTPHASE ePhase,
		[in] BOOL fCantDeny
	);

